{
  "name": "homebridge-luxtronik2",
  "version": "1.0.3",
  "description": "Homebridge module to retrieve data from a luxtronik2 controller for heat pumps",
  "main": "index.js",
  "keywords": [
    "luxtronik2",
    "HomeBridge",
    "homebridge-plugin"
  ],
  "engines": {
    "node": ">=14.19.3",
    "homebridge": ">=1.4.1"
  },
  "author": "Christian Brandlehner",
  "license": "MIT",
  "config": {
    "urls": []
  },
  "dependencies": {
    "socket.io-client": ">= 4.2.1"
  },
  "scripts": {
    "pretest": "eslint --ignore-path .eslintrc.json package.json package-lock.json config.schema.json sample-config.json --ignore-pattern '.gitignore'",
    "test": "xo"
  },
  "bugs": {
    "url": "https://github.com/cbrandlehner/homebridge-luxtronik2/issues"
  },
  "homepage": "https://github.com/cbrandlehner/homebridge-luxtronik2#readme",
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/cbrandlehner"
    },
    {
      "type": "paypal",
      "url": "https://paypal.me/CBrandlehner"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cbrandlehner/homebridge-luxtronik2.git"
  },
  "devDependencies": {
    "eslint": "^8.32.0",
    "eslint-config-xo": "^0.43.1",
    "eslint-plugin-json": "^3.1.0",
    "xo": "^0.54.1"
  },
  "xo": {
    "space": false,
    "rules": {
      "unicorn/no-for-loop": "off",
      "camelcase": "off",
      "no-mixed-spaces-and-tabs": "warn",
      "no-useless-escape": "warn",
      "indent": "off",
      "quotes": "warn",
      "capitalized-comments": "off",
      "no-var": "warn",
      "prefer-arrow-callback": "off",
      "max-depth": "off",
      "object-shorthand": [
        "off",
        "always",
        {
          "ignoreConstructors": true
        }
      ],
      "quote-props": "error",
      "no-unused-vars": "error",
      "curly": [
        "error",
        "multi-or-nest",
        "consistent"
      ],
      "no-use-before-define": [
        "error",
        {
          "classes": false
        }
      ],
      "unicorn/prefer-module": "off"
    }
  }
}
